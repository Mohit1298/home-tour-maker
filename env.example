# Google Cloud Configuration
# Copy this file to .env and fill in your values

# Required: Your Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Required: Cloud Storage bucket for temporary files
GCS_BUCKET=your-bucket-name

# Optional: Google Cloud region (default: us-central1)
GOOGLE_CLOUD_LOCATION=us-central1

# Optional: Veo model to use
# veo-3.0-generate-preview (preview, latest features)
# veo-3.0-generate-001 (latest stable, highest quality)
# veo-3.0-fast-generate-001 (faster generation, good quality)
# veo-2.0-generate-001 (legacy, deprecated)
VEO_MODEL=veo-3.0-generate-preview

# Optional: Service Account credentials path
# Only needed if not using Application Default Credentials
# GOOGLE_APPLICATION_CREDENTIALS=./path/to/credentials.json

# Optional: Default voice for TTS
DEFAULT_VOICE=en-US-Neural2-D

# Optional: Default output settings
DEFAULT_ASPECT_RATIO=16:9
DEFAULT_RESOLUTION=1080p
DEFAULT_DURATION=90

# Optional: Cost limits (in USD)
MAX_COST_PER_VIDEO=10.00
WARN_COST_THRESHOLD=5.00

# Optional: Rate limiting
MAX_CONCURRENT_JOBS=3
VEOAPI_RATE_LIMIT=10  # requests per minute

# Optional: File storage
UPLOAD_DIR=./uploads
OUTPUT_DIR=./output
TEMP_DIR=./.cache

# Optional: Webhooks for job completion
WEBHOOK_URL=https://your-app.com/webhooks/tour-complete
WEBHOOK_SECRET=your-webhook-secret

# Development vs Production
NODE_ENV=development
